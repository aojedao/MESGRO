<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="robotGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2196F3;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1976D2;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#FF9800;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F57C00;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="#f5f5f5"/>
  
  <!-- Robot chassis -->
  <rect x="150" y="120" width="100" height="60" rx="10" fill="url(#robotGradient)" stroke="#1565C0" stroke-width="2"/>
  
  <!-- Wheels -->
  <circle cx="140" cy="180" r="20" fill="#424242" stroke="#212121" stroke-width="2"/>
  <circle cx="260" cy="180" r="20" fill="#424242" stroke="#212121" stroke-width="2"/>
  
  <!-- Wheel centers -->
  <circle cx="140" cy="180" r="8" fill="#757575"/>
  <circle cx="260" cy="180" r="8" fill="#757575"/>
  
  <!-- Sensors array -->
  <g transform="translate(175, 110)">
    <rect x="-20" y="0" width="8" height="12" fill="#E53935" rx="2"/>
    <rect x="-8" y="0" width="8" height="12" fill="#E53935" rx="2"/>
    <rect x="4" y="0" width="8" height="12" fill="#E53935" rx="2"/>
    <rect x="16" y="0" width="8" height="12" fill="#E53935" rx="2"/>
    <rect x="28" y="0" width="8" height="12" fill="#E53935" rx="2"/>
  </g>
  
  <!-- Arduino board -->
  <rect x="160" y="130" width="30" height="20" fill="#00796B" stroke="#004D40" stroke-width="1"/>
  <text x="175" y="142" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="white">UNO</text>
  
  <!-- Motor driver -->
  <rect x="210" y="130" width="25" height="15" fill="#7B1FA2" stroke="#4A148C" stroke-width="1"/>
  <text x="222" y="140" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" fill="white">L298N</text>
  
  <!-- Line to follow -->
  <rect x="50" y="210" width="300" height="6" fill="url(#lineGradient)" rx="3"/>
  
  <!-- Track lines -->
  <line x1="0" y1="220" x2="400" y2="220" stroke="#666" stroke-width="1" stroke-dasharray="5,5"/>
  <line x1="0" y1="206" x2="400" y2="206" stroke="#666" stroke-width="1" stroke-dasharray="5,5"/>
  
  <!-- Sensor rays -->
  <g opacity="0.6">
    <path d="M 155 122 L 155 205" stroke="#FF5722" stroke-width="1" stroke-dasharray="2,2"/>
    <path d="M 167 122 L 167 205" stroke="#FF5722" stroke-width="1" stroke-dasharray="2,2"/>
    <path d="M 179 122 L 179 205" stroke="#FF5722" stroke-width="1" stroke-dasharray="2,2"/>
    <path d="M 191 122 L 191 205" stroke="#FF5722" stroke-width="1" stroke-dasharray="2,2"/>
    <path d="M 203 122 L 203 205" stroke="#FF5722" stroke-width="1" stroke-dasharray="2,2"/>
  </g>
  
  <!-- Title -->
  <text x="200" y="30" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#333">
    Line Following Robot
  </text>
  
  <!-- Labels -->
  <text x="200" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">
    Arduino UNO • PID Control • IR Sensors
  </text>
  
  <!-- Direction arrow -->
  <path d="M 280 150 L 320 150 M 315 145 L 320 150 L 315 155" stroke="#4CAF50" stroke-width="3" fill="none"/>
  <text x="325" y="155" font-family="Arial, sans-serif" font-size="10" fill="#4CAF50">Forward</text>
</svg>