<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="armGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF6F00;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E65100;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="jointGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#424242;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#212121;stop-opacity:1" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="#f8f9fa"/>
  
  <!-- Base -->
  <ellipse cx="200" cy="260" rx="40" ry="15" fill="#37474F"/>
  <rect x="160" y="245" width="80" height="30" fill="url(#armGradient)" rx="5"/>
  <circle cx="200" cy="245" r="12" fill="url(#jointGradient)"/>
  
  <!-- Link 1 (Base rotation) -->
  <rect x="190" y="200" width="20" height="45" fill="url(#armGradient)" rx="3" transform="rotate(-10 200 222)"/>
  <circle cx="200" cy="200" r="10" fill="url(#jointGradient)"/>
  
  <!-- Link 2 (Shoulder) -->
  <rect x="190" y="140" width="60" height="15" fill="url(#armGradient)" rx="7" transform="rotate(15 220 147)"/>
  <circle cx="200" cy="147" r="8" fill="url(#jointGradient)"/>
  
  <!-- Link 3 (Elbow) -->
  <rect x="240" y="100" width="50" height="12" fill="url(#armGradient)" rx="6" transform="rotate(-25 265 106)"/>
  <circle cx="250" cy="106" r="7" fill="url(#jointGradient)"/>
  
  <!-- Link 4 (Wrist 1) -->
  <rect x="275" y="80" width="30" height="10" fill="url(#armGradient)" rx="5" transform="rotate(45 290 85)"/>
  <circle cx="290" cy="85" r="6" fill="url(#jointGradient)"/>
  
  <!-- Link 5 (Wrist 2) -->
  <rect x="305" y="75" width="20" height="8" fill="url(#armGradient)" rx="4" transform="rotate(-20 315 79)"/>
  <circle cx="315" cy="79" r="5" fill="url(#jointGradient)"/>
  
  <!-- End Effector (Gripper) -->
  <g transform="translate(325, 75) rotate(-20)">
    <rect x="-3" y="-2" width="16" height="4" fill="#546E7A" rx="2"/>
    <!-- Gripper fingers -->
    <rect x="13" y="-6" width="2" height="8" fill="#37474F"/>
    <rect x="13" y="2" width="2" height="8" fill="#37474F"/>
    <rect x="13" y="-2" width="2" height="8" fill="#37474F"/>
  </g>
  
  <!-- Camera/Vision system -->
  <rect x="180" y="120" width="15" height="10" fill="#1976D2" rx="2"/>
  <circle cx="187" cy="125" r="3" fill="#0D47A1"/>
  <text x="175" y="115" font-family="Arial, sans-serif" font-size="8" fill="#1976D2">Vision</text>
  
  <!-- DOF indicators -->
  <g opacity="0.7">
    <!-- Base rotation -->
    <path d="M 180 245 A 20 20 0 0 1 220 245" stroke="#4CAF50" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
    <!-- Shoulder -->
    <path d="M 210 155 A 15 15 0 0 1 230 140" stroke="#4CAF50" stroke-width="1.5" fill="none"/>
    <!-- Elbow -->
    <path d="M 255 115 A 12 12 0 0 1 270 100" stroke="#4CAF50" stroke-width="1.5" fill="none"/>
  </g>
  
  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#4CAF50"/>
    </marker>
  </defs>
  
  <!-- Object to pick up -->
  <rect x="340" y="250" width="20" height="20" fill="#E91E63" rx="3" stroke="#C2185B" stroke-width="1"/>
  <text x="350" y="245" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#666">Target</text>
  
  <!-- Title -->
  <text x="200" y="30" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#333">
    6-DOF Robotic Arm
  </text>
  
  <!-- Subtitle -->
  <text x="200" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">
    Computer Vision • Inverse Kinematics • Force Feedback
  </text>
  
  <!-- DOF labels -->
  <text x="30" y="280" font-family="Arial, sans-serif" font-size="10" fill="#4CAF50">6 Degrees of Freedom</text>
  <text x="30" y="295" font-family="Arial, sans-serif" font-size="8" fill="#666">Pick & Place Operations</text>
</svg>