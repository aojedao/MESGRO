<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="stationGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4CAF50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2E7D32;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="solarGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFC107;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FF8F00;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="signalGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#2196F3;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#1976D2;stop-opacity:0.2" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="#f1f8e9"/>
  
  <!-- Ground -->
  <ellipse cx="200" cy="280" rx="150" ry="20" fill="#8BC34A" opacity="0.3"/>
  
  <!-- Main housing -->
  <rect x="160" y="180" width="80" height="60" rx="8" fill="url(#stationGradient)" stroke="#1B5E20" stroke-width="2"/>
  
  <!-- Solar panel -->
  <rect x="140" y="130" width="120" height="40" rx="5" fill="url(#solarGradient)" stroke="#E65100" stroke-width="2"/>
  <!-- Solar panel grid -->
  <g stroke="#FF8F00" stroke-width="1" opacity="0.7">
    <line x1="170" y1="135" x2="170" y2="165"/>
    <line x1="200" y1="135" x2="200" y2="165"/>
    <line x1="230" y1="135" x2="230" y2="165"/>
    <line x1="145" y1="145" x2="255" y2="145"/>
    <line x1="145" y1="155" x2="255" y2="155"/>
  </g>
  
  <!-- Antenna -->
  <rect x="198" y="120" width="4" height="30" fill="#424242"/>
  <circle cx="200" cy="115" r="8" fill="#1976D2" opacity="0.8"/>
  
  <!-- WiFi/Radio waves -->
  <g opacity="0.6">
    <circle cx="200" cy="115" r="15" fill="none" stroke="#2196F3" stroke-width="2"/>
    <circle cx="200" cy="115" r="25" fill="none" stroke="#2196F3" stroke-width="1.5"/>
    <circle cx="200" cy="115" r="35" fill="none" stroke="#2196F3" stroke-width="1"/>
  </g>
  
  <!-- Sensors -->
  <!-- Temperature/Humidity sensor -->
  <rect x="170" y="165" width="12" height="8" fill="#FF5722" rx="2"/>
  <text x="176" y="162" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" fill="#FF5722">DHT22</text>
  
  <!-- Pressure sensor -->
  <rect x="200" y="165" width="12" height="8" fill="#9C27B0" rx="2"/>
  <text x="206" y="162" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" fill="#9C27B0">BMP</text>
  
  <!-- Light sensor -->
  <circle cx="224" cy="169" r="4" fill="#FFC107"/>
  <text x="224" y="162" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" fill="#FF8F00">LUX</text>
  
  <!-- Soil moisture probe -->
  <rect x="185" y="240" width="6" height="25" fill="#795548" rx="3"/>
  <rect x="209" y="240" width="6" height="25" fill="#795548" rx="3"/>
  <line x1="191" y1="240" x2="191" y2="200" stroke="#8D6E63" stroke-width="2"/>
  <line x1="212" y1="240" x2="212" y2="200" stroke="#8D6E63" stroke-width="2"/>
  
  <!-- Data visualization (small chart) -->
  <rect x="50" y="60" width="120" height="80" fill="white" stroke="#ddd" stroke-width="1" rx="5"/>
  <text x="110" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="#333">
    Live Data
  </text>
  
  <!-- Temperature chart -->
  <polyline points="60,120 70,110 80,115 90,105 100,108 110,100 120,95 130,90 140,85 150,80"
            fill="none" stroke="#FF5722" stroke-width="2"/>
  <text x="60" y="135" font-family="Arial, sans-serif" font-size="8" fill="#FF5722">Temp °C</text>
  
  <!-- Humidity chart -->
  <polyline points="60,130 70,125 80,128 90,122 100,125 110,120 120,118 130,115 140,112 150,110"
            fill="none" stroke="#2196F3" stroke-width="2"/>
  <text x="60" y="145" font-family="Arial, sans-serif" font-size="8" fill="#2196F3">Humidity %</text>
  
  <!-- Cloud connection -->
  <g transform="translate(280, 80)">
    <!-- Cloud -->
    <ellipse cx="0" cy="0" rx="25" ry="12" fill="#E3F2FD"/>
    <ellipse cx="-15" cy="-5" rx="15" ry="10" fill="#E3F2FD"/>
    <ellipse cx="15" cy="-3" rx="12" ry="8" fill="#E3F2FD"/>
    <text x="0" y="3" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#1976D2">Cloud</text>
    
    <!-- Connection line -->
    <path d="M -20 5 Q -50 20 -80 -10" stroke="#2196F3" stroke-width="2" fill="none" stroke-dasharray="5,3"/>
  </g>
  
  <!-- Alert indicators -->
  <circle cx="340" cy="200" r="8" fill="#FF5722" opacity="0.8">
    <animate attributeName="opacity" values="0.3;1;0.3" dur="2s" repeatCount="indefinite"/>
  </circle>
  <text x="340" y="205" text-anchor="middle" font-family="Arial, sans-serif" font-size="6" fill="white">!</text>
  <text x="340" y="220" text-anchor="middle" font-family="Arial, sans-serif" font-size="8" fill="#FF5722">Alert</text>
  
  <!-- Title -->
  <text x="200" y="30" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#333">
    IoT Environmental Monitor
  </text>
  
  <!-- Subtitle -->
  <text x="200" y="50" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#666">
    ESP32 • Solar Powered • Real-time Analytics • MQTT
  </text>
</svg>